[push]
 default = simple
[alias]
 dag = log --graph --format='format:%C(yellow)%h%C(reset) %C(blue)\"%an\" <%ae>%C(reset) %C(magenta)%cr%C(reset)%C(auto)%d%C(reset)%n%s' --date-order

##########################
[diff]
 tool = p4merge
[difftool]
 prompt = false

[merge]
 tool = p4merge
[mergetool]
 prompt = false
 keepBackup = false

[commit]
	template = /Users/maxpaulu/.stCommitMsg

###########################
[difftool "vscode"]
 cmd = /usr/local/bin/code --wait --diff $LOCAL $REMOTE
[mergetool "vscode"]
 cmd = /usr/local/bin/code --wait $MERGED

###########################

[difftool "idea"]
    cmd = idea diff $(cd $(dirname \"$LOCAL\") && pwd)/$(basename \"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(basename \"$REMOTE\")
[mergetool "idea"]
    cmd = idea merge $(cd $(dirname \"$LOCAL\") && pwd)/$(\"$LOCAL\") $(cd $(dirname \"$REMOTE\") && pwd)/$(\"$REMOTE\") $(cd $(dirname \"$BASE\") && pwd)/$(\"$BASE\") $(cd $(dirname \"$MERGED\") && pwd)/$(\"$MERGED\")
    trustExitCode = true
        

